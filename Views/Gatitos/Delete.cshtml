@model GatitosWebApp.Models.Gatito

<h1>Eliminar gatito</h1>

<p>¿Estás seguro de que deseas eliminar el siguiente gatito?</p>

<div>
    <h4>Nombre:</h4>
    <p>@Model.Nombre</p>
</div>
<div>
    <h4>Raza:</h4>
    <p>@Model.Raza</p>
</div>
<div>
    <h4>Imagen:</h4>
    <img src="@Model.ImagenUrl" alt="@Model.Nombre" style="width: 100px; height: auto;" />
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Eliminar</button>
    <a asp-action="Index">Cancelar</a>
</form>
